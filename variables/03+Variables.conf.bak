events {}

http {

  include mime.types;

  server {

    listen 80;
    server_name 167.99.93.26;

    root /sites/demo;

	#checking query parameter is valid
	if ($arg_key != 1234) {
	return 401 "invlaid key"
	}
	
	#to understand the variable parsing in the header
	location /variable {
		return 200 "Host = $host\n URI = $uri\n arg_name = $args"
	}

	
    set $mon 'No';

    # Check if weekend
    if ( $date_local ~ 'Monday' ) {
      set $mon 'Yes';
    }



    location /is_monday {

      return 200 $mon;
    }
	

  }
}
